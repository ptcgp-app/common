{
  "name": "@ptcgp-app/common",
  "version": "0.1.0",
  "author": "Richard Solomou",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "description": "Common types and utilities for PTCGP.App",
  "files": ["dist"],
  "keywords": ["ptcgp", "pokemon", "tcg", "types"],
  "license": "AGPL-3.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build:clean && bun build:bundle",
    "build:clean": "rm -rf dist",
    "build:bundle": "bun build ./src/index.ts --outdir=dist --format=esm",
    "dev": "bun build:bundle --watch",
    "format": "bun biome check --write --unsafe .",
    "lint": "tsc --noEmit && bun biome check",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@sinclair/typebox": "^0.34.28"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.28.1",
    "@types/bun": "^1.2.4",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
